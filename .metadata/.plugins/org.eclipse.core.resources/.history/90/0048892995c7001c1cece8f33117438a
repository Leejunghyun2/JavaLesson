package chap07;

public class Buyer {
	int money = 1000;
	int bonusPoint = 0;
	int count =0;
	Product[] x = new Product[100];
	void buy(Product t) {
		if(money < t.price) {
			System.out.println("잔액부족!!!");
			return;
		}
		money = money - t.price;
		bonusPoint += t.bonusPoint;
		System.out.println(t+ "를 구입하셨습니다.");
		x[count++] = t;
	}
	
	
}
