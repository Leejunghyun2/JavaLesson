package NewPersonExam01;

import java.util.Scanner;

public class Dday {
	Scanner sc = new Scanner(System.in);
	int year,month,day,date;

	Dday(int year, int month, int day) {
	
		this.year = year;
		this.month = month;
		this.day = day;
	}

	
	void showDday() {
		
		
		date = 1;
		
		for(int i=1;i<100;i++) {
			
				
			
		}
		
		switch(month) {
		case 1: case 3: case 5: case 7: case 8: case 10: case 12:
		{
			if(day>31) {
				day = 1;
				month++;
			}
		}
		case 2:
		{
			if(day>28) {
				day = 1;
				month++;
			}
		}
		
	}
	
	
	
	
}
